<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="client.ui.FXcontrollers.LoginController">
  <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="10">
    <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Логин:"/>
    <TextField fx:id="usernameField"/>

    <Label text="Пароль:"/>
    <PasswordField fx:id="passwordField"/>

    <Button text="Войти" onAction="#onLogin"/>
    <Button text="Зарегистрироваться" onAction="#onRegisterButtonClick"/>
    <Label fx:id="errorLabel" textFill="red"/>
  </VBox>
</AnchorPane>
